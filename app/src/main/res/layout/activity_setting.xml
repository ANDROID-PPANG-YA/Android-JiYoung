<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <TextView
        android:id="@+id/textview_headersetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:text="@string/setting"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/setting_divisor1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textview_headersetting"/>


    <TextView
        android:id="@+id/textview_login_setting"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/notautologin"
        android:textSize="13sp"
        app:drawableEndCompat="@drawable/ic_arrow"
        app:layout_constraintTop_toBottomOf="@id/setting_divisor1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sopt_gray2"
        app:layout_constraintTop_toBottomOf="@id/textview_login_setting"/>

</androidx.constraintlayout.widget.ConstraintLayout>