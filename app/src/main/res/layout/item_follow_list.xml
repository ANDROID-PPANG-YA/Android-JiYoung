<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="30dp">

    <ImageView
        android:id="@+id/imageview_follow_user"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textview_follow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/user_name"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_follow_des"
        app:layout_constraintStart_toEndOf="@id/imageview_follow_user"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textview_follow_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="야호~"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_margin="10dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/textview_follow_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageview_follow_user"/>

</androidx.constraintlayout.widget.ConstraintLayout>